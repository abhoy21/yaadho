{
  "manifest_version": 3,
  "name": "Yaad Ho",
  "version": "1.0",
  "description": "Save interesting content from around the web",
 "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting"
  ],
   "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.linkedin.com/*",
    "*://*.youtube.com/*",
    "<all_urls>"
  ],
  "icons": {
    "32": "public/icon32.png"
  },
 "action": {
    "default_icon": {
      "32": "public/icon32.png"
    },
    "default_title": "Yaad Ho"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}

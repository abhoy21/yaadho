{
  "manifest_version": 3,
  "name": "Link Notifier",
  "version": "1.0",
  "permissions": ["notifications", "storage", "activeTab"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}
